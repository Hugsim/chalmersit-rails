<article role="article">
  <div class="article-inner">
    <header>
      <h1><%= link_to post.title, post %></h1>
      <% unless has_translation? post %>
      <div data-alert class="alert-box warning">
          <h4><%= t 'translation_missing', model: Post.model_name.human.downcase %></h4>
      </div>
      <% end %>
      <p class="meta">
      <%= link_to post.comments.size, post, title: "#{post.comments.size} #{Comment.model_name.human(count:post.comments.size).downcase}", class: 'comments-bubble smooth', data: { tooltip: '' } %>
      <span class="sep">|</span> <time data-tooltip title="<%= t 'published' %> <%= post.created_at.to_s(:iso_date_time) %>" datetime="<%= post.created_at.to_s(:rfc822) %>" pubdate><%= post.created_at.to_s(:day_month) %></time>
        <span class="sep">|</span> <%= link_to t('permalink'), post %>
    <span class="sep">|</span>  <%= t '.posted_for' %> <%= link_to post.group_id, '#' %> <%= t '.by' %> <%= link_to post.user_id, '#', title: "#{t '.posts_by'} #{post.user_id}", rel: 'author' %>
        <span class="sep">|</span> <%= link_to t('helpers.submit.update', model:Post.model_name.human.downcase), edit_post_path(post) %>
      </p>
    </header>
    <div class="article-content"><%= markdown post.body %></div>
  </div>
</article>
