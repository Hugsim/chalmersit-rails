<% cache ['home_posts', I18n.locale, @posts.first] do  %>
  <% @posts.each do |post| %>
    <% cache ['home', I18n.locale, post] do %>
      <%= render post %>
    <% end %>
  <% end %>
<% end %>
<% if @posts.size < Post.all.size %>
  <footer>
    <%= link_to t('more', model: Post.model_name.human(count: 2).downcase), posts_path, class: 'button expand read-more' %>
  </footer>
<% end %>
