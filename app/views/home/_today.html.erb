<section class="current-event box">
  <h2><%= t '.next_event' %></h2>
  <div>
    <% if events.size == 0 %>
      <p><%= t '.no_events' %></p>
    <% else %>
      <% events.each do |event| %>
        <div>
          <h3 class="event-title"><%= link_to event.post.title, event.post %></h3>
          <ul class="meta">
            <li><%= l event.start_date, format: '%e %B, %H:%M' %></li>
          </ul>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
