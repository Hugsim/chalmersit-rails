<% content_for :sidebar_left do %>
  <div class="row">
    <div class="columns large-12 box">
      <h2>Cheat sheet</h2>
      <h3>Headers</h3>
      <code>
        <div class="code">
          # This is an &lt;h1&gt; tag <br>
          ## This is an &lt;h2&gt; tag <br>
          ###### This is an &lt;h6&gt; tag
        </div>
      </code>
      <br>
      <h3>Emphasis</h3>
      <code>
        <div class="code">
          *This text will be italic*<br>
          _This will also be italic_<br>
          <br>
          **This text will be bold**<br>
          __This will also be bold__<br>
          <br>
          _You **can** combine them_
        </div>
      </code>
      <br>
      <h3>Images</h3>
      <code>
        <div class="code">
          ![GitHub Logo](/images/logo.png)<br>
          Format: ![Alt Text](url)
        </div>
      </code>
      <br>
      <h3>Links</h3>
      <code>
        <div class="code">
          http://github.com - automatic! <br>
          [GitHub](http://github.com)
        </div>
      </code>
      <br>More <a href="https://guides.github.com/features/mastering-markdown/">here</a>
    </div>
  </div>
<% end %>

<%= simple_form_for(@page, html: { novalidate: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= render "localized_fields", f: f %>

  <%= f.input :parent_id, as: :select, collection: @other_pages , value_method: :id, label_method: :title_sv, include_blank: true %>
  <div class="large-12 columns image-upload-button">
    <%= f.file_field :item_upload %>
  </div>
  <%= f.button :submit %>
<% end %>

<%= render "shared/markdown_preview" %>
