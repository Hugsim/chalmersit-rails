<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <%= f.input :code %>

  <%= render 'localized_fields', f: f %>

  <%= f.input :year %>

  <%= f.input :required %>

  <%= f.input :homepage %>

  <%= f.association :periods, as: :check_boxes, label: Course.human_attribute_name('period', count: 2)  %>

  <%= f.input :programme %>

  <%= f.button :submit %>
<% end %>
