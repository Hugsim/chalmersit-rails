<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div data-alert class="<%= 'large-offset-4' if current_page?(root_url) %> alert-box round <%= name.to_s == 'notice' ? 'success' : 'alert' %>">
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
